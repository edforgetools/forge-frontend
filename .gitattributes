# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.svg text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Force CRLF line endings for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary

# Exclude from git diff
*.min.js -diff
*.min.css -diff

# Mark files as generated
dist/** linguist-generated=true
build/** linguist-generated=true
coverage/** linguist-generated=true
*.tsbuildinfo linguist-generated=true

# Mark vendor files as generated
node_modules/** linguist-vendored=true

# Mark test files
**/*.test.js linguist-documentation=false
**/*.test.ts linguist-documentation=false
**/*.spec.js linguist-documentation=false
**/*.spec.ts linguist-documentation=false